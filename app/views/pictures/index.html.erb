<h1>Pictures (<%= @pictures.length %>)</h1>
<%= link_to("New Picture", "/pictures/new") %>

<% @pictures.each do |picture| %>
  <p><%= picture.title %>, <%= picture.artist %></p>
  <%= link_to(image_tag(picture.url), "/pictures/#{picture.id}") %>
<% end %>



<h1>Most recent pictures</h1>
<ul>
  <% @most_recent_pictures.each do |picture| %>
    <li><%= picture.title %></li>
  <% end %>
</ul>


<h1>oldest pictures</h1>

<ul>
  <% @old_pictures.each do |picture| %>
    <li><%= picture.title %></li>
  <% end %>
</ul>

<h1>Order In Year Created</h1>

<h1>Pictures By year</h1>
 <% year = (2012..2017) %>
 <%year.each do |year| %>
 <%picture_year = @picture.pictures_created_in_year(year) %>

 <ul>
     <p><%=year%></p>
       <%picture_year.each do |picture| %>
         <li><%= picture.title %></li>
    <%end%>
  </ul>
<%end%>
